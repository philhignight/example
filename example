(function() {
    'use strict';

    // Configuration
    const CONFIG = {
        STORAGE_KEY: 'ai_chat_overlay_api_data',
        RETRY_ATTEMPTS: 3,
        RETRY_DELAY: 2000
    };

    // Logging utility
    const Logger = {
        log: (category, message, data = null) => {
            const timestamp = new Date().toISOString();
            const logMessage = `[${timestamp}] [${category}] ${message}`;
            console.log(logMessage, data || '');
        },
        error: (category, message, error = null) => {
            const timestamp = new Date().toISOString();
            const logMessage = `[${timestamp}] [${category}] ERROR: ${message}`;
            console.error(logMessage, error || '');
        },
        warn: (category, message, data = null) => {
            const timestamp = new Date().toISOString();
            const logMessage = `[${timestamp}] [${category}] WARNING: ${message}`;
            console.warn(logMessage, data || '');
        }
    };

    // Utility functions
    const Utils = {
        generateUUID: () => {
            return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
                const r = Math.random() * 16 | 0;
                const v = c == 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
        },
        
        get13DigitTimestamp: () => {
            return Date.now();
        },
        
        get10DigitTimestamp: () => {
            return Math.floor(Date.now() / 1000);
        }
    };

    // API Template Manager
    class APITemplateManager {
        constructor() {
            Logger.log('APITemplate', 'Initializing API Template Manager');
            this.template = null;
            this.requestDetails = null;
            this.isInitialized = false;
            this.originalFetch = null;
        }

        async initialize() {
            Logger.log('APITemplate', 'Starting template capture process');
            
            // Override fetch to capture template
            this.originalFetch = window.fetch;
            const self = this;
            
            window.fetch = async function(...args) {
                const url = args[0];
                const options = args[1] || {};
                
                // Check for target API call
                if (typeof url === 'string' && url.includes('/api/v1/chats/new') && !self.isInitialized) {
                    Logger.log('APITemplate', 'Capturing API template', { url });
                    
                    if (options.body) {
                        try {
                            const requestBody = JSON.parse(options.body);
                            
                            // Capture request details
                            self.requestDetails = {
                                url: url,
                                method: options.method || 'POST',
                                headers: self.extractHeaders(options.headers),
                                basePayload: requestBody
                            };
                            
                            // Create template by removing specific message content
                            self.template = JSON.parse(JSON.stringify(requestBody));
                            self.cleanTemplate();
                            
                            self.isInitialized = true;
                            Logger.log('APITemplate', 'Template captured successfully');
                            
                        } catch (e) {
                            Logger.error('APITemplate', 'Failed to capture template', e);
                        }
                    }
                }
                
                // Let original request proceed
                return self.originalFetch.apply(this, args);
            };
            
            // Send dummy message to trigger template capture
            await this.sendDummyMessage();
            
            // Wait for template to be captured
            let attempts = 0;
            while (!this.isInitialized && attempts < 50) {
                await new Promise(resolve => setTimeout(resolve, 100));
                attempts++;
            }
            
            if (this.isInitialized) {
                Logger.log('APITemplate', 'Template initialization complete');
                return true;
            } else {
                Logger.error('APITemplate', 'Failed to initialize template');
                return false;
            }
        }

        extractHeaders(headers) {
            const result = {};
            if (headers) {
                if (headers instanceof Headers) {
                    for (let [key, value] of headers.entries()) {
                        result[key] = value;
                    }
                } else if (typeof headers === 'object') {
                    Object.assign(result, headers);
                }
            }
            return result;
        }

        cleanTemplate() {
            // Remove dummy content and replace with placeholders
            if (this.template.chat && this.template.chat.messages) {
                this.template.chat.messages.forEach(msg => {
                    if (msg.role === 'user') {
                        msg.content = '{{USER_MESSAGE}}';
                    }
                });
                
                if (this.template.chat.history && this.template.chat.history.messages) {
                    Object.values(this.template.chat.history.messages).forEach(msg => {
                        if (msg.role === 'user') {
                            msg.content = '{{USER_MESSAGE}}';
                        }
                    });
                }
            }
        }

        async sendDummyMessage() {
            Logger.log('APITemplate', 'Sending dummy message to capture template');
            
            try {
                // Wait for new chat button and click it
                const newChatBtn = await this.waitForElement('#new-chat-button');
                newChatBtn.click();
                
                // Wait for input and send dummy message
                const chatInput = await this.waitForElement('#chat-input');
                chatInput.textContent = 'template';
                
                // Click submit
                const submitBtn = await this.waitForElement('#submit-prompt-btn');
                submitBtn.click();
                
                Logger.log('APITemplate', 'Dummy message sent');
                
            } catch (error) {
                Logger.error('APITemplate', 'Failed to send dummy message', error);
            }
        }

        async waitForElement(selector, timeout = 30000) {
            Logger.log('APITemplate', `Waiting for element: ${selector}`, { timeoutMs: timeout });
            
            return new Promise((resolve, reject) => {
                const startTime = Date.now();
                let attempts = 0;
                
                const checkElement = () => {
                    attempts++;
                    const element = document.querySelector(selector);
                    const elapsed = Date.now() - startTime;
                    
                    if (element) {
                        Logger.log('APITemplate', `Element found: ${selector}`, { 
                            attempts, 
                            elapsedMs: elapsed,
                            elementType: element.tagName
                        });
                        resolve(element);
                        return;
                    }
                    
                    // Log every 5 seconds while waiting
                    if (attempts % 50 === 0) {
                        Logger.log('APITemplate', `Still waiting for: ${selector}`, { 
                            attempts, 
                            elapsedMs: elapsed 
                        });
                        
                        // Also log what elements we CAN find with similar IDs
                        const similarElements = document.querySelectorAll('[id*="submit"], [id*="chat"], [id*="new"]');
                        const foundIds = Array.from(similarElements).map(el => el.id).filter(id => id);
                        Logger.log('APITemplate', 'Similar elements found', foundIds);
                    }
                    
                    if (elapsed >= timeout) {
                        Logger.error('APITemplate', `Timeout waiting for element: ${selector}`, {
                            attempts,
                            elapsedMs: elapsed,
                            timeoutMs: timeout
                        });
                        
                        // Final check for similar elements
                        const allElements = document.querySelectorAll('[id*="submit"], [id*="chat"], [id*="new"]');
                        const allIds = Array.from(allElements).map(el => el.id).filter(id => id);
                        Logger.error('APITemplate', 'All similar elements at timeout', allIds);
                        
                        reject(new Error(`Timeout waiting for element: ${selector}`));
                        return;
                    }
                    
                    setTimeout(checkElement, 100);
                };
                
                checkElement();
            });
        }

        createPayload(userMessage, conversationHistory = []) {
            if (!this.template) {
                Logger.error('APITemplate', 'No template available');
                return null;
            }
            
            Logger.log('APITemplate', 'Creating payload for message', { 
                messageLength: userMessage.length,
                historyLength: conversationHistory.length
            });
            
            // Clone template
            const payload = JSON.parse(JSON.stringify(this.template));
            
            // Update timestamps
            const timestamp13 = Utils.get13DigitTimestamp();
            const timestamp10 = Utils.get10DigitTimestamp();
            payload.chat.timestamp = timestamp13;
            
            // Create new message ID
            const messageId = Utils.generateUUID();
            
            // Update message content and IDs
            if (payload.chat.messages) {
                payload.chat.messages.forEach(msg => {
                    if (msg.content === '{{USER_MESSAGE}}') {
                        msg.content = userMessage;
                        msg.id = messageId;
                        msg.timestamp = timestamp10;
                    }
                });
            }
            
            // Update history
            if (payload.chat.history) {
                payload.chat.history.currentId = messageId;
                
                if (payload.chat.history.messages) {
                    const newMessages = {};
                    Object.entries(payload.chat.history.messages).forEach(([key, msg]) => {
                        if (msg.content === '{{USER_MESSAGE}}') {
                            msg.content = userMessage;
                            msg.id = messageId;
                            msg.timestamp = timestamp10;
                            newMessages[messageId] = msg;
                        } else {
                            newMessages[key] = msg;
                        }
                    });
                    payload.chat.history.messages = newMessages;
                }
            }
            
            // TODO: Add conversation history handling
            
            Logger.log('APITemplate', 'Payload created successfully');
            return payload;
        }

        async sendMessage(userMessage, conversationHistory = []) {
            if (!this.isInitialized) {
                Logger.error('APITemplate', 'Template not initialized');
                return null;
            }
            
            const payload = this.createPayload(userMessage, conversationHistory);
            if (!payload) {
                return null;
            }
            
            try {
                Logger.log('APITemplate', 'Sending message via API');
                
                const response = await this.originalFetch(this.requestDetails.url, {
                    method: this.requestDetails.method,
                    headers: this.requestDetails.headers,
                    body: JSON.stringify(payload)
                });
                
                Logger.log('APITemplate', 'API response received', { 
                    status: response.status 
                });
                
                const responseData = await response.json();
                Logger.log('APITemplate', 'Message sent successfully', responseData);
                
                return responseData;
                
            } catch (error) {
                Logger.error('APITemplate', 'Failed to send message', error);
                return null;
            }
        }
    }

    // Chat Management (simplified)
    class ChatManager {
        constructor() {
            Logger.log('ChatManager', 'Initializing ChatManager');
            this.data = this.loadData();
        }

        loadData() {
            try {
                const stored = localStorage.getItem(CONFIG.STORAGE_KEY);
                return stored ? JSON.parse(stored) : { chats: [], currentChatId: null };
            } catch (e) {
                Logger.error('ChatManager', 'Failed to load chat data', e);
                return { chats: [], currentChatId: null };
            }
        }

        saveData() {
            try {
                localStorage.setItem(CONFIG.STORAGE_KEY, JSON.stringify(this.data));
            } catch (e) {
                Logger.error('ChatManager', 'Failed to save chat data', e);
            }
        }

        createNewChat() {
            const chatId = Date.now().toString();
            const chat = {
                id: chatId,
                timestamp: new Date().toLocaleString(),
                messages: []
            };
            this.data.chats.unshift(chat);
            this.data.currentChatId = chatId;
            this.saveData();
            Logger.log('ChatManager', 'New chat created', { chatId });
            return chat;
        }

        getCurrentChat() {
            if (!this.data.currentChatId) return null;
            return this.data.chats.find(chat => chat.id === this.data.currentChatId);
        }

        selectChat(chatId) {
            this.data.currentChatId = chatId;
            this.saveData();
        }

        addMessage(role, content) {
            const chat = this.getCurrentChat();
            if (chat) {
                chat.messages.push({ role, content, timestamp: Date.now() });
                this.saveData();
                Logger.log('ChatManager', 'Message added', { role });
            }
        }
    }

    // Simplified UI
    function createSimplifiedUI() {
        // Remove existing overlay
        const existing = document.getElementById('ai-chat-overlay-api');
        if (existing) existing.remove();

        const overlay = document.createElement('div');
        overlay.id = 'ai-chat-overlay-api';
        overlay.innerHTML = `
            <div class="chat-container">
                <div class="chat-header">
                    <h1>AI Chat (API Mode)</h1>
                    <div class="header-controls">
                        <button id="new-chat-api" class="btn">New Chat</button>
                        <button id="close-overlay-api" class="btn btn-danger">×</button>
                    </div>
                </div>
                
                <div class="chat-content">
                    <div class="sidebar">
                        <h3>Previous Chats</h3>
                        <div id="chat-list-api" class="chat-list"></div>
                    </div>
                    
                    <div class="main-chat">
                        <div id="messages-api" class="messages"></div>
                        <div class="input-area">
                            <textarea id="user-input-api" placeholder="Type your message..." rows="3"></textarea>
                            <button id="send-btn-api" class="btn btn-primary">Send</button>
                        </div>
                        <div id="status-api" class="status">Initializing API template...</div>
                    </div>
                </div>
            </div>
        `;

        // Add CSS (same styling as before)
        const style = document.createElement('style');
        style.textContent = `
            #ai-chat-overlay-api {
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: #1a1a1a;
                color: #e0e0e0;
                font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
                font-size: 14px;
                z-index: 9999;
                display: flex;
                flex-direction: column;
            }

            .chat-container {
                display: flex;
                flex-direction: column;
                height: 100%;
                max-width: 100%;
            }

            .chat-header {
                background: #2d2d2d;
                padding: 15px 20px;
                border-bottom: 1px solid #444;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .chat-header h1 {
                margin: 0;
                font-size: 18px;
                font-weight: normal;
            }

            .header-controls {
                display: flex;
                gap: 10px;
            }

            .chat-content {
                display: flex;
                flex: 1;
                overflow: hidden;
            }

            .sidebar {
                width: 250px;
                background: #252525;
                border-right: 1px solid #444;
                padding: 15px;
                overflow-y: auto;
            }

            .sidebar h3 {
                margin: 0 0 15px 0;
                font-size: 14px;
                font-weight: normal;
                color: #ccc;
            }

            .chat-list {
                display: flex;
                flex-direction: column;
                gap: 5px;
            }

            .chat-item {
                padding: 8px 12px;
                background: #333;
                border: 1px solid #444;
                border-radius: 4px;
                cursor: pointer;
                font-size: 12px;
                transition: background-color 0.2s;
            }

            .chat-item:hover {
                background: #3a3a3a;
            }

            .chat-item.active {
                background: #0d7377;
                border-color: #14a085;
            }

            .main-chat {
                flex: 1;
                display: flex;
                flex-direction: column;
                overflow: hidden;
            }

            .messages {
                flex: 1;
                overflow-y: auto;
                padding: 20px;
                display: flex;
                flex-direction: column;
                gap: 15px;
            }

            .message {
                max-width: 80%;
                padding: 12px 16px;
                border-radius: 8px;
                white-space: pre-wrap;
                word-wrap: break-word;
            }

            .message.user {
                align-self: flex-end;
                background: #0d7377;
                border: 1px solid #14a085;
            }

            .message.assistant {
                align-self: flex-start;
                background: #2d2d2d;
                border: 1px solid #444;
            }

            .input-area {
                padding: 15px 20px;
                background: #2d2d2d;
                border-top: 1px solid #444;
                display: flex;
                gap: 10px;
                align-items: flex-end;
            }

            #user-input-api {
                flex: 1;
                background: #1a1a1a;
                border: 1px solid #444;
                border-radius: 4px;
                color: #e0e0e0;
                padding: 10px;
                font-family: inherit;
